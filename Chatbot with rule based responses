def chatbot():
    print("Chatbot: Hello! I'm ChatBot. Type 'bye' to exit.")

    while True:
        user_input = input("You: ").lower()

        if "hello" in user_input or "hi" in user_input:
            print("Chatbot: Hi there! How can I help you?")
        elif "how are you" in user_input:
            print("Chatbot: I'm just a bunch of code, but I'm doing great! ðŸ˜Š")
        elif "your name" in user_input:
            print("Chatbot: I'm a simple rule-based chatbot.")
        elif "help" in user_input:
            print("Chatbot: Sure! You can ask me things like 'what's your name', 'how are you', or just say hello.")
        elif "bye" in user_input:
            print("Chatbot: Goodbye! Have a nice day! ðŸ‘‹")
            break
        else:
            print("Chatbot: Sorry, I don't understand that. Try asking something else.")
chatbot()
